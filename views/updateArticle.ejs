<%- include("./partials/header.ejs", {title: "About"}) %>

<h1>Modifier L'article</h1>

<form action="">
  <div>
    <div>
      <label for="author">Auteur</label>
    </div>
    <div>
      <input type="text" value="<%= article.author  %>" name="author" id="author" />
    </div>
  </div>
  <div>
    <div>
      <label for="title">Title</label>
    </div>
    <div>
      <input type="text" value="<%= article.title %>" name="title" id="title" />
    </div>
  </div>
  <div>
    <div>
      <label for="description">Description</label>
    </div>
    <div>
      <input type="text" value="<%= article.description %>" name="description" id="description" />
    </div>
  </div>
  <div>
    <div>
      <label for="img">Choisir une image</label>
    </div>
    <div>
      <img src="<%= article.urlToImage %>" wi alt="">
    </div>
    <div>
      <input type="file" value="<%= article.urlToImage %>"  name="img" id="img" />
    </div>
  </div>

  <div>
    <div>
      <label for="content">Contenu</label>
    </div>
    <div>
      <textarea name="content" value="<%= article.content  %>" id="content"></textarea>
    </div>
  </div>

  <input type="submit" id="btn-submit" data-slug="<%= article.slug %>" value="Ajouter" />
</form>

<script src="/js/updateArticle.js"></script>
<%- include("./partials/footer.ejs") %>
